{
  "name": "@try-govuk-react-jsx-next/root",
  "version": "0.0.1",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna clean --yes",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "format:pkg": "format-package -w",
    "prettier": "npx prettier --check .",
    "prettier:fix": "npx prettier --write .",
    "start:govuk-react-jsx-next": "npm --prefix services/govuk-react-jsx-next/ run start",
    "update": "npx npm-check-updates -u && npx lerna exec -- npx npm-check-updates -u && lerna clean --yes && lerna bootstrap --no-ci -- --package-lock-only --no-audit"
  },
  "dependencies": {},
  "license": "MIT",
  "devDependencies": {
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "format-package": "^6.1.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "npm-check-updates": "^10.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint",
      "pre-commit": "lint-staged --quiet"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "prettier --write"
  }
}
