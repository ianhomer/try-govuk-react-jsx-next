{
  "compilerOptions": {
    "declaration": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "dom", "es2016", "es2017"],
    "target": "es5",
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
